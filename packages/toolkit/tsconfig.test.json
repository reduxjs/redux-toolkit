{
  // For runtime and type tests during CI.
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx"
  },
  "exclude": ["dist"],
  "include": [
    "src/**/*.test.ts*",
    "src/**/*.test-d.ts*",
    "src/**/*.spec.ts*",
    "src/**/tests/**/*",
    "src/**/*.typetest.ts*"
  ]
}
